section
  display: flex
  align-items: center

  .box-viedo
    border-radius: 10px
    padding: 10px
    background-color: white
    width: 250px
    min-width: 250px;
    margin: 10px 5px
    position relative
    z-index: 2

    input
      padding: 5px 10px
      border: solid 1px #dedede
      width: 100%
      margin: 5px 0
      font-size: 14px

    .viewVideo
      width: 100%
      height: 100px
      display: table

    span
      display: flex
      align-items: center
      justify-content: center

      button
        display: table
        width: 100%
        background: #C95555
        margin: 0 5px
        padding: 5px
        border-radius: 20px
        color: white
        text-transform: uppercase

        &:first-child
          background-color: #00B880

  .child
    border-left: solid 4px rgba(0,0,0,0.2);
    margin: 10px 0 10px 10px;
    position: relative;
    z-index: 1;
    display: flex
    flex-direction: column
    justify-content: space-between

    &:before
      content: ''
      width: 20px
      height 4px
      background-color: rgba(0,0,0,0.2)
      position: absolute
      top: 50%
      left: -23px
